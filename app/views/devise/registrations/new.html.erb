<h2>Crie a sua Conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.input :name,  required: true, autofocus: true, class: 'form-control', label: false %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.input :email, required: true, class: 'form-control', label: false %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Senha' %>
    <%= f.input :password, required: true, class: 'form-control', label: false %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirmação de senha' %>
    <%= f.input :password_confirmation, required: true, class: 'form-control', label: false %>
  </div>
  <div class="form-group">
    <%= f.label :image, 'Adicionar imagem' %>
    <%= f.file_field :image, accept: "image/jpeg, image/jpg, image/gif, image/png" , class: 'form-control'%>
  </div>
<%= f.button :submit, "Criar conta", class: "btn btn-default", style: 'width: 200px; padding: 0 !important;' %>
<% end %><br>

<%= render "devise/shared/links" %><br><br>